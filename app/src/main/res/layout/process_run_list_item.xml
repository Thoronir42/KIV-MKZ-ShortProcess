<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/processRunListItem_textTitle"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="run_id_process_name"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toLeftOf="@+id/processRunListItem_buttonStop"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/processRunListItem_buttonStop"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@android:drawable/ic_delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/processRunListItem_textStartedOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="started_on"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/processRunListItem_textTitle" />

    <TextView
        android:id="@+id/processRunListItem_completion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="run_completion"
        app:layout_constraintLeft_toRightOf="@+id/processRunListItem_textStartedOn"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/processRunListItem_buttonStop"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/processRunListItem_textTitle" />
</android.support.constraint.ConstraintLayout>
